@model IEnumerable<meivorts.Models.Contato>

@{
    ViewBag.Title = "Index";
}

<div class="col-lg-12">
    <p>
        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Create", "contato", new { id = 0 })'">Novo</button>
    </p>
    <legend>Contatos</legend>
    <div class="table-responsive">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped " id="myTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoContato)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Facebook)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Twitter)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Observacao)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoContato1.NomeTipoContato)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Facebook)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Twitter)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Observacao)
                            </td>
                            <td align="right">
                                <button class="glyphicon glyphicon-pencil btn-sm btn btn-success" type="button" onclick="location.href='@Url.Action("Create", "contato", new { id = item.ID })'">Editar</button>
                                <button class="glyphicon glyphicon-trash btn-sm btn btn-danger" name="Excluir" type="button" onclick="Excluir(@Html.DisplayFor(modelItem => item.ID), 'contato')">Excluir</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
    
        }

    </div>
</div>
@section scripts{
    <script src="~/Scripts/Util/DataTable.js"></script>
}
