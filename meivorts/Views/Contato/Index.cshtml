@model PagedList.IPagedList<meivorts.Models.Contato>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}

<div class="col-lg-12">
    <p>
        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Create", "contato", new { id = 0 })'">Novo</button>
    </p>
    <legend>Contatos</legend>
    <div class="table-responsive">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped ">
                <tr>
                    <th>
                        @Html.ActionLink("Nome", null, new { sortOrder = ViewBag.NomeSort, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        @Html.ActionLink("Tipo de contato", null, new { sortOrder = ViewBag.TipoContatoSort, currentFilter = ViewBag.CurrentFilter })

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Telefone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Facebook)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Twitter)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Observacao)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoContato1.NomeTipoContato)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Facebook)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Twitter)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Observacao)
                        </td>
                        <td align="right">
                            <button class="glyphicon glyphicon-pencil btn-sm btn btn-success" type="button" onclick="location.href='@Url.Action("Create", "contato", new { id = item.ID })'">Editar</button>
                            <button class="glyphicon glyphicon-trash btn-sm btn btn-danger" name="Excluir" type="button" onclick="Excluir(@Html.DisplayFor(modelItem => item.ID), 'contato')">Excluir</button>
                        </td>
                    </tr>
                }
            </table>
            <p>Pág. @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount</p>

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    
        }

    </div>
</div>
