@model meivorts.Models.TipoCompromisso

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tipo Compromisso</legend>

        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.DataCriacao)
        @Html.HiddenFor(model => model.DataAlteracao)
        @Html.HiddenFor(model => model.Excluido)

        <div class="editor-label">
            @Html.LabelFor(model => model.NomeCompromisso)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NomeCompromisso)
            @Html.ValidationMessageFor(model => model.NomeCompromisso)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retornar", "Index")
</div>
