@model IEnumerable<meivorts.Models.Compromisso>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="col-lg-12">
    <p>
        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Create", "compromisso", new { id = 0 })'">Novo</button>
    </p>
    <legend>Compromissos</legend>
    <div class="table-responsive">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped ">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoCompromisso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Local.NomeLocal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hora)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StatusCompromisso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contato)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th></th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoCompromisso1.NomeCompromisso)
                        </td>
                        <td>
                            <button type="button" class="glyphicon glyphicon-plus btn btn-xs btn-default left" data-target="#Local_@Html.DisplayFor(modelItem => item.IDLocal)" onclick="" data-toggle="modal"></button>
                            @Html.DisplayFor(modelItem => item.Local.NomeLocal)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hora)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatusCompromisso1.Nome)
                        </td>
                        <td>
                            <button type="button" class="glyphicon glyphicon-plus btn btn-xs btn-default" data-target="#Contato_@Html.DisplayFor(modelItem => item.Contato)" data-toggle="modal"></button>
                            @Html.DisplayFor(modelItem => item.Contato1.Nome)
                            
                        </td>
                        <td align="center">
                            <button type="button" class="glyphicon glyphicon-plus btn btn-xs btn-default" data-toggle="popover" title="Observa&#231;&#227;o" data-content="@Html.DisplayFor(modelItem => item.Descricao) " />
                        </td>
                        <td align="right">
                            <button class="glyphicon glyphicon-pencil btn-sm btn btn-success" type="button" onclick="location.href='@Url.Action("Create", "compromisso", new { id = item.ID })'"> Editar</button>
                            <button class="glyphicon glyphicon-trash btn-sm btn btn-danger" name="Excluir" type="button" onclick="Excluir(@Html.DisplayFor(modelItem => item.ID), 'compromisso')"> Excluir</button>
                        </td>
                        <div class="modal fade" id="Local_@Html.DisplayFor(modelItem => item.IDLocal)" tabindex=" -1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Local</h4>
                                    </div>
                                    <div class="modal-body">
                                        @Html.DisplayFor(modelItem => item.Local.NomeLocal)
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal fade" id="Contato_@Html.DisplayFor(modelItem => item.Contato)" tabindex=" -1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Local</h4>
                                    </div>
                                    <div class="modal-body">
                                        @Html.DisplayFor(modelItem => item.Contato1.Nome)
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </tr>
                }
            </table>

        }
    </div>
</div>
