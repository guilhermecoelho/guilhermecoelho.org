@model IEnumerable<meivorts.Models.Local>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>

<div class="col-lg-12">
    <p>
        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Create", "local", new { id = 0 })'">Novo</button>
    </p>
    <legend>Locais</legend>

    @if (Model.Count() > 0)
    {
        <table class="table-responsive">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeLocal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IDEndereco)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeLocal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IDEndereco)
                    </td>
                    <td align="right">
                        <button class="glyphicon glyphicon-pencil btn-sm btn btn-success" type="button" onclick="location.href='@Url.Action("Create", "local", new { id = item.ID })'"> Editar</button>
                        <button class="glyphicon glyphicon-trash btn-sm btn btn-danger" name="Excluir" type="button" onclick="Excluir(@Html.DisplayFor(modelItem => item.ID), 'local')"> Excluir</button>

                    </td>
                </tr>
            }

        </table>
    }

</div>
