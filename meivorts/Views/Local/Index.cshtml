@model IEnumerable<meivorts.Models.Local>

@{
    ViewBag.Title = "Index";
}

<div class="col-lg-12">
    <p>
        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Create", "local", new { id = 0 })'">Novo</button>
    </p>
    <legend>Locais</legend>
    <div class="table-responsive">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped " id="myTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NomeLocal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IDEndereco)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeLocal)
                            </td>
                            <td>
                                <button type="button" class="glyphicon glyphicon-plus btn btn-xs btn-default left" data-target="#Endereco_@Html.DisplayFor(modelItem => item.IDEndereco)" onclick="" data-toggle="modal"></button>

                            </td>
                            <td align="right">
                                <button class="glyphicon glyphicon-pencil btn-sm btn btn-success" type="button" onclick="location.href='@Url.Action("Create", "local", new { id = item.ID })'">Editar</button>
                                <button class="glyphicon glyphicon-trash btn-sm btn btn-danger" name="Excluir" type="button" onclick="Excluir(@Html.DisplayFor(modelItem => item.ID), 'local')">Excluir</button>

                            </td>
                            <div class="modal fade" id="Endereco_@Html.DisplayFor(modelItem => item.Endereco.ID)" tabindex=" -1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                            <h4 class="modal-title" id="modalLocal">Local</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>Local: @Html.DisplayFor(modelItem => item.NomeLocal)</p>
                                            <p>Rua: @Html.DisplayFor(modelItem => item.Endereco.Rua)</p>
                                            <p>Número: @Html.DisplayFor(modelItem => item.Endereco.Numero)</p>
                                            <p>Bairro: @Html.DisplayFor(modelItem => item.Endereco.Bairro)</p>
                                            <p>Cidade: @Html.DisplayFor(modelItem => item.Endereco.Cidade)</p>
                                            <p>UF: @Html.DisplayFor(modelItem => item.Endereco.UF)</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Util/DataTable.js"></script>
}
