@model meivorts.Models.TipoContato

@{
    ViewBag.Title = "Create";
}
<div class="col-lg-12">
    <h2>Novo</h2>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <p>
            <button class="glyphicon glyphicon-backward btn-sm btn btn-primary" type="button" onclick="location.href='@Url.Action("")'"> Voltar</button>
        </p>
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <fieldset>
                    <legend>Tipo Contato</legend>
                    <div class="control-group">
                        <div class="control-label">
                            @Html.LabelFor(model => model.NomeTipoContato)
                        </div>
                        <div class="controls">
                            @Html.TextBoxFor(model => model.NomeTipoContato, new { @class = "form-control", @style = "Width:20%" })
                            @Html.ValidationMessageFor(model => model.NomeTipoContato)
                            <p></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <button class="btn btn-success" type="submit">Salvar</button>
                        </div>
                    </div>
                </fieldset>
            </div>
        </form>
    }
</div>
