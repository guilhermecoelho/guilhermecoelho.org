@model IEnumerable<meivorts.Models.Usuario>

@{
    ViewBag.Title = "Index";
}
<div class="col-lg-12">
    <p>
        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Create", "usuario", new { id = 0 })'">Novo</button>
    </p>
    <legend>Usuários</legend>
    <div class="table-responsive">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped " id="myTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NomeUsuario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoUsuario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ativo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoUsuario1.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ativo)
                            </td>
                            <td align="right">
                                <button class="glyphicon glyphicon-pencil btn-sm btn btn-success" type="button" onclick="location.href='@Url.Action("Create", "usuario", new { id = item.ID })'">Editar</button>
                                <button class="glyphicon glyphicon-trash btn-sm btn btn-danger" name="Excluir" type="button" onclick="Excluir(@Html.DisplayFor(modelItem => item.ID), 'usuario')">Excluir</button>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Util/DataTable.js"></script>
}
