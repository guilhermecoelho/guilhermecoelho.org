@{
    Layout = null;
}


<!DOCTYPE html>

<html lang="pt-br">

<head>

    <meta name="viewport" content="width=device-width" />

    <title>Meivorts - @ViewBag.Title</title>

    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.2/css/jquery.dataTables.css">

    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jquery.inputmask/jquery.inputmask-3.0.55.js"></script>
    <script type="text/javascript" src="~/Scripts/Util/BootstrapAux.js"></script>
    <script type="text/javascript" src="~/Scripts/Util/Mask.js"></script>
    <script type="text/javascript" src="~/Scripts/Util/Action.js"></script>
    <!-- DataTables --> 
    
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.2/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/plug-ins/725b2a2115b/sorting/date-uk.js"></script>

    @RenderSection("scripts", required: false)
    <style>
        body {
        }
    </style>

</head>

<body>
    @if (HttpContext.Current.User.Identity.IsAuthenticated)
    {
       
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Meivorts</a>

                        <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">

                            <li id="menuCompromisso"><a href="~/compromisso">Compromisso</a></li>
                            <li id="menuContato"><a href="~/contato">Contato</a></li>
                            <li id="menuLocal"><a href="~/local">Locais</a></li>
                            <li id="menuTipoCompromisso"><a href="~/tipocompromisso">Tipo Compromisso</a></li>
                            <li id="StatusCompromisso"><a href="~/StatusCompromisso">Status Compromisso</a></li>
                            <li id="menuTipoContato"><a href="~/tipocontato">Tipo Contato</a></li>

                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <li id="logOff"><a href="~/login/logOff">Sair</a></li>
                        </ul>
                    </div>
                </div>
            </div>


        </div>
    }
    <div class="container" style="padding-top: 60px">

        @RenderBody()

    </div>

    <script src="@Url.Content("~/Scripts/jquery-2.0.2.min.js")">

    </script>

    <script src="@Url.Content("~/Scripts/bootstrap.min.js")">

    </script>

    @RenderSection("script", required: false);

</body>

</html>
